{
	"name": "@pigeon-posse/pkg-extended-scripts",
	"version": "1.0.1",
	"description": "Separate scripts from package.json",
	"keywords": [
		"cli",
		"extended-scripts",
		"npm",
		"package-scripts",
		"package.json",
		"pigeonposse",
		"pkg",
